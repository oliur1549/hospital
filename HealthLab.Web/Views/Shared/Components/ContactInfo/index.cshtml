
<div class="container text-center text-md-left mt-5">

    <!-- Grid row -->
    <div class="row mt-3">
        @foreach (var item in Model)
        {
        <!-- Grid column -->
        <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">

            <!-- Content -->
            <h6 class="text-uppercase font-weight-bold">Company name</h6>
            <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
            <p>
                @item.Description
            </p>
            
        </div>
        <!-- Grid column -->
        <!-- Grid column -->
        
        <!-- Grid column -->
        <!-- Grid column -->
        <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">

            <!-- Links -->
            <h6 class="text-uppercase font-weight-bold">Useful links</h6>
            <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
            <p>
                <a asp-controller="Appointment" asp-action="Index">Appointment</a>
            </p>
            <p>
                <a asp-controller="Contact" asp-action="Index">Contact</a>
            </p>
            <p>
                <a asp-controller="About" asp-action="Index">About</a>
            </p>
            <p>
                <a asp-controller="Contact" asp-action="Index">Help</a>
            </p>

        </div>
        <!-- Grid column -->
        <!-- Grid column -->
        <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">

            <!-- Links -->
            <h6 class="text-uppercase font-weight-bold">Contact</h6>
            <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
            <p>
                <i class="fas fa-home mr-3"></i> @item.Address
            </p>
            <p>
                <i class="fas fa-envelope mr-3"></i> @item.Email
            </p>
            <p>
                <i class="fas fa-phone mr-3"></i> @item.Phone
            </p>
            @*<p>
                <i class="fas fa-print mr-3"></i> + 01 234 567 89
            </p>*@

        </div>
        <!-- Grid column -->
        }
    </div>
    <!-- Grid row -->

</div>

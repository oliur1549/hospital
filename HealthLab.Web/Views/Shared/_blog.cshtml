@model HealthLab.Framework.BlogLab.Blog
    <div id="blog" class="blog-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="title-box">
                        <h2>Blog</h2>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. </p>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var blog in ViewBag.Blog)
                {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="blog-inner">
                        <div class="blog-img">
                            <img class="img-fluid" src="~/blog/@blog.Image" alt="" />
                        </div>
                        <div class="item-meta">
                            @*<a href="#"><i class="fa fa-comments-o"></i> 5 Comment </a>
                            <a href="#"><i class="fa fa-user-o"></i> Admin</a>*@
                            <span class="dti">@blog.Datetime</span>
                        </div>
                        <h2>@blog.Title</h2>
                        <p>@blog.Description </p>
                        <a class="new-btn-d br-2" href="#">Read More <i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>